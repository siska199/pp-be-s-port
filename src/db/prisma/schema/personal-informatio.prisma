model PersonalInformation {
    id                  String  @id @default(uuid())
    profesional_image   String  @db.VarChar(2083)
    first_name          String  @db.VarChar(50)
    last_name           String  @db.VarChar(50)
    province            String  @db.VarChar(255)
    city                String  @db.VarChar(255)
    district            String  @db.VarChar(255)
    postal_code         String  @db.VarChar(5)
    phone_number        String  @db.VarChar(15)
    email               String  @db.VarChar(255)
    about_me            String  @db.LongText
    boi                 String  @db.VarChar(255)

    createdAt           DateTime @default(now())
    updatedAt           DateTime @updatedAt
    
    id_profession       String  @db.VarChar(32)
    id_user             String  @unique @db.VarChar(32)

    profession          Profession @relation(fields:[id_profession], references: [id])
    user                User       @relation(fields: [id_user], references: [id])
    
    @@map("personal_information")
}