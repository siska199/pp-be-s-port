model User {
    id                      String   @id @default(uuid())
    first_name              String   @db.VarChar(50)
    last_name               String   @db.VarChar(50)
    email                   String   @unique @db.VarChar(100)
    password                String   @db.VarChar(64) 
    phone_number            String?  @db.VarChar(15)
    image                   String?  @db.VarChar(255)
    
    is_verified             Boolean  @default(false)
    verified_token          String?  @db.VarChar(255)
    expired_verified_token  DateTime 
    
    createdAt               DateTime @default(now())
    updatedAt               DateTime @updatedAt
    id_profession           String   @db.VarChar(255)
    id_peronal_information  String?  @db.VarChar(255)

    profession              Profession  @relation(fields: [id_profession],references: [id])
    experience_metrics      ExperianceMetric[]
    social_links            SocialLink[]
    personal_information    PersonalInformation?

    @@map("user")
}